<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ui_background"
    tools:context=".fragment_profilepage">

    <!-- Top Menu -->

    <!-- Profile Stats -->
    <ImageView
        android:id="@+id/profilePagePopUpBackButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="100dp">

        <!-- Profile Picture and Username -->

        <!-- Profile Stats Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Favorite Genre -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/profilePagePopUpPicture"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@color/black"
                    android:scaleType="centerCrop"
                    android:src="@drawable/three_dot" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profilePagePopUpUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:text="Username"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Favorite Artist -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Favorite Artist"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profilePagePopUpFavArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Taylor Swift, Ed Sheeran, BeyoncÃ©"
                android:textSize="16sp" />

            <!-- Most Played -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Most Played"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profilePagePopUpMostPlayed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shape of You, Roar, Uptown Funk"
                android:textSize="16sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@color/white">

                    <ImageView
                        android:layout_width="1in"
                        android:layout_height="1in"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:elevation="3dp"
                        tools:ignore="InOrMmUsage"
                        android:src="@color/black"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@color/white">

                    <ImageView
                        android:layout_width="1in"
                        android:layout_height="1in"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:elevation="3dp"
                        tools:ignore="InOrMmUsage"
                        android:src="@color/black"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@color/white">

                    <ImageView
                        android:layout_width="1in"
                        android:layout_height="1in"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:elevation="3dp"
                        tools:ignore="InOrMmUsage"
                        android:src="@color/black"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@color/white">

                    <ImageView
                        android:layout_width="1in"
                        android:layout_height="1in"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:elevation="3dp"
                        tools:ignore="InOrMmUsage"
                        android:src="@color/black"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>

    </FrameLayout>

    <!-- Bottom Menu -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>