<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/ui_background">

    B

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create New Password"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/forget_current_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:drawablePadding="8dp"
                android:hint="Enter Current Password"
                android:padding="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/forget_create_new_password"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Create New Password"
                android:inputType="textPassword"
                android:drawablePadding="8dp" />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/forget_confirm_password"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Confirm New Password"
                android:inputType="textPassword"
                android:drawablePadding="8dp" />



            <Button
                android:id="@+id/update_password_button"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:width="100dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/light_blue"
                android:text="Update Password"/>

            <Button
                android:id="@+id/back_button"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:width="100dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/darker_blue"
                android:text="Back"/>



        </LinearLayout>




    </androidx.cardview.widget.CardView>




</LinearLayout>