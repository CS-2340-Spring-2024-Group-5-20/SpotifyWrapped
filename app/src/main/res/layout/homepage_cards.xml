<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:backgroundTint="#00000000"
    android:padding="4dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:layout_goneMarginStart="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <!-- New LinearLayout for Text Views -->

        <ImageView
            android:id="@+id/image_post"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:background="@color/white"
            android:elevation="3dp"
            android:src="@drawable/fade1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- TextView for Username -->

            <!-- TextView for Description -->
            <TextView
                android:id="@+id/text_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_description"
                android:layout_width="170sp"
                android:layout_height="52dp"
                android:layout_marginTop="5dp"
                android:text="Description goes here. This is a sample description text for the post."
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/LikesButton"
                android:layout_width="43dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|end"
                android:adjustViewBounds="true"
                android:backgroundTint="#00000000"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/secondcroppedandroidstudioheart_85x76"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/comment_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="0dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/comment" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>